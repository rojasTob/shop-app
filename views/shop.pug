extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/shop.css")
block content
    main
        .grid
            if prods.length > 0
                each product in prods
                    article.card-product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://lirp.cdn-website.com/19745099/dms3rep/multi/opt/GettyImages-1169699948-480w.png", alt="")
                        div.card__content
                            h2.product__price $19.20
                            p.product__description This book is about a broken heart
                        .card__actions
                            button.btn Add to cart
            else
                h3 There are no products!
